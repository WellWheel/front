<div class="page-wrap">
    <button id="menu-toggle"></button>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">VOS TRAJETS</h1>
                <a href="/trajet/creation/">Création</a>

            </div>
            <!-- /.col-lg-12 -->
        </div>


        <!--<%= JSON.stringify(trajets) %>-->
        <div id="page-wrapper">
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Listes de vos trajets
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Numéro trajet</th>
                                        <th>Point de départ</th>
                                        <th>Point d'arrivé</th>
                                        <th>Paramètres</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% trajets.forEach(function(info) { %>
                                        <tr class="odd gradeX">
                                            <td>
                                                <%= info.id %>
                                            </td>
                                            <td>
                                                <%= info.start %>
                                            </td>
                                            <td>
                                                <%= info.end %>
                                            </td>
                                            <td class="center">
                                                <a href="/trajet/show/<%= info.id %>" class="btn btn-primary" data-content="trajet <%= info.id %>">Voir</a>
                                                <form action="/trajet/delete" method="POST">
                                                    <input type="hidden" name="idvoyage" id="idvoyage" value="<%= info.id %>">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>


        </div>
    </div>
</div>
