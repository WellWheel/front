        <script type="text/javascript">
        function init(){
            document.getElementById('nav-de-malade').style.display = 'none'
        }
         
        function cacher(objet){
            if(objet.style.display == 'none'){
                $('#nav-de-malade').fadeIn('fast');
                $('.cross').addClass('open-nav');
            }
            else{
                $('#nav-de-malade').fadeOut('fast');
                $('.cross').removeClass('open-nav');                 
            }
        }  
        </script>
         <script type="text/javascript">
            i = setInterval ->
