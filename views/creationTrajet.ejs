<script type="text/javascript">
const phrases = document.querySelector('.phrases');

window.SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;

if (window.SpeechRecognition) {
  const recognition = new SpeechRecognition();
  recognition.lang = 'fr-FR';
  recognition.interimResults = true;

  recognition.addEventListener('result', e => {
    const textResult = Array.from(e.results)
        .map(result => result[0])
        .map(result => result.transcript)
        .join('');

    if (e.results[0].isFinal) {
        const p = document.createElement('p');
        p.innerHTML = `<span>ðŸ—£</span> ${textResult}`;
        phrases.appendChild(p);

        const ssu = new SpeechSynthesisUtterance();
        ssu.text = textResult;
        ssu.rate = 0.8;
        ssu.pitch = 0;
        speechSynthesis.speak(ssu);
    }
  });

  recognition.addEventListener('end', recognition.start);

  recognition.start();
} else {
  document.querySelector('body').textContent = 'ðŸ˜© Your browser doesn\'t support Speech Recognition.';
}

</script>


