<div class="page-wrap">
    <button id="menu-toggle"></button>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Votre PlayList Spotify</h1>
            </div>
            <div id="wrapper">
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <%= name %>
                                </div>
                                <div class="panel-body">
                                    <% if (playlists.length > 0) { %>
                                        <ul>
                                            <% playlists.forEach(function(info) { %>
                                            <% }); %>
                                        </ul>
                                    <% } else { %>
                                        <div class="alert aler-info">
                                            <strong>Information</strong><br>
                                            Il n'y a aucun morceau dans cette playlist
                                        </div>
                                    <% }; %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Ajouter un morceau
                                </div>
                                <div class="panel-body">
                                    <input id="track" class="form-control" type="text" /><br />
                                    <button id="search" class="btn btn-primary">Rechercher</button>
                                    <div class="row" id="response">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
<script>
$(document).ready(function  () {
    var socket = io.connect('http://localhost:8080/');
    $("#search").on("click",function  (e) {
        var title = "";
        if($("#track").val() !== '') {
            title = $("#track").val();
            socket.emit('searchtrack', {title: title});
            socket.on('trackfound', function(datas) {
                $('#response').html("");
                console.log(datas.tracks.items);
                var tracks = datas.tracks.items;
                tracks.forEach(function(track) {
                    $('#response').append(
                        '<div class="col-md-6">' +
                            '<figure class="snip1174 navy col-md-4">' +
                                '<img src="' + track.album.images[0].url + '"/>' +
                                '<figcaption>' +
                                    '<h2>' + track.name + '</h2>' +
                                    '<p>' +
                                        track.artists[0].name + " . " + track.album.name +
                                    '</p>' +
                                    '<a href="#">Ajouter</a>' +
                                '</figcaption>' +
                            '</figure>' +
                        '</div>'
                    )
                })
            })
        }
    })
})
</script>
